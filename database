CREATE DATABASE api;

USE api;

CREATE TABLE user (
  id INT(11) PRIMARY KEY AUTO_INCREMENT,
  username VARCHAR(255) NOT NULL,
  password VARCHAR(255) NOT NULL
);

CREATE TABLE skills (
  id INT(11) PRIMARY KEY AUTO_INCREMENT,
  name VARCHAR(255) NOT NULL,
  function VARCHAR(255) NOT NULL,
  user_id INT(11),
  FOREIGN KEY (user_id) REFERENCES user(id)
);
